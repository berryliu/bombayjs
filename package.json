{
  "name": "@zvalley/bombay",
  "version": "0.2.2",
  "description": "前端错误、性能、行为、PV采集库，不依赖于任何框架",
  "keywords": [
    "error",
    "pv",
    "perf",
    "behavior",
    "frontend-tracker"
  ],
  "main": "dist/bombay.js",
  "umd:main": "dist/bombay.umd.js",
  "module": "dist/bombay.module.js",
  "typings": "dist/index.d.ts",
  "author": {
    "name": "liu yunlin, xiaojing"
  },
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:122687220/bombayjs.git"
  },
  "scripts": {
    "start": "cross-env TARGET=umd-dev rollup -c -w",
    "build": "rollup -c",
    "release": "bash scripts/release.sh"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.0.3",
    "@types/node": "^12.0.2",
    "cross-env": "^5.2.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "rollup": "^1.12.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.21.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
